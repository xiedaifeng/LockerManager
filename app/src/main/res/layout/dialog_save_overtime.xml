<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:background="@drawable/all_corner_shape"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingBottom="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="包裹存放已超时\n请扫描下方二维码支付取出包裹"
        android:textColor="@color/color_333333"
        android:textSize="20sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:src="@color/color_0ED26B"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_role_name"
            android:text="已支付"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/text_0ed26b_5_shape"/>

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_role_name"
            android:text="取消"
            android:textColor="@color/color_0ED26B"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/text_eeeeee_5_shape"/>

    </LinearLayout>

</LinearLayout>