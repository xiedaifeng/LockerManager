<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false">

    <include layout="@layout/item_head_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="115dp"
            android:paddingRight="40dp"
            android:gravity="center_vertical">


            <RelativeLayout
                android:id="@+id/rl_parcel"
                android:layout_width="290dp"
                android:layout_height="290dp"
                android:gravity="center"
                android:background="@drawable/text_84d603_shape">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sender_deliver"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="投递"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/iv1"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="115dp"
            android:paddingLeft="40dp"
            android:gravity="center_vertical">


            <RelativeLayout
                android:id="@+id/rl_sender"
                android:layout_width="290dp"
                android:layout_height="290dp"
                android:gravity="center"
                android:background="@drawable/text_ffd200_shape">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sender_back"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取回"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_below="@+id/iv2"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>